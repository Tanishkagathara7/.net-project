@model IEnumerable<MOM.Models.DepartmentModel>

@{
    ViewData["Title"] = "Departments";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Departments</h1>
            <p class="page-subtitle">Manage organizational departments</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Add Department
        </a>
    </div>
</div>

<div class="table-container">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th width="80">#</th>
                    <th>Department Name</th>
                    <th width="120">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var department in Model)
                {
                    <tr>
                        <td>
                            <span class="text-muted">@index</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-sm">
                                <i class="bi bi-diagram-3 text-primary"></i>
                                <span class="fw-medium">@department.DepartmentName</span>
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@department.DepartmentID" 
                                   class="btn btn-sm btn-secondary" title="Edit Department">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@department.DepartmentID" 
                                   class="btn btn-sm btn-danger" title="Delete Department"
                                   onclick="return confirm('Are you sure you want to delete this department?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-diagram-3"></i>
            <h3>No departments found</h3>
            <p class="text-muted">Start by creating your first department</p>
            <a asp-action="Create" class="btn btn-primary mt-lg">
                <i class="bi bi-plus-circle"></i>
                Add Department
            </a>
        </div>
    }
</div>
