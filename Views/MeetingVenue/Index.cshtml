@model IEnumerable<MOM.Models.MeetingVenueModel>

@{
    ViewData["Title"] = "Meeting Venues";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Meeting Venues</h1>
            <p class="page-subtitle">Manage meeting locations and venues</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Add Venue
        </a>
    </div>
</div>

<div class="table-container">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Venue Name</th>
                    <th width="120">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-sm">
                                <i class="bi bi-geo-alt text-primary"></i>
                                <span class="fw-medium">@venue.MeetingVenueName</span>
                            </div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@venue.MeetingVenueID" 
                                   class="btn btn-sm btn-secondary" title="Edit Venue">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@venue.MeetingVenueID" 
                                   class="btn btn-sm btn-danger" title="Delete Venue"
                                   onclick="return confirm('Are you sure you want to delete this venue?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-geo-alt"></i>
            <h3>No venues found</h3>
            <p class="text-muted">Start by adding your first meeting venue</p>
            <a asp-action="Create" class="btn btn-primary mt-lg">
                <i class="bi bi-plus-circle"></i>
                Add Venue
            </a>
        </div>
    }
</div>
