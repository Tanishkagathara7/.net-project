@model IEnumerable<MOM.Models.MeetingListVM>

@{
    ViewData["Title"] = "Meetings";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade-in" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade-in" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Meetings</h1>
            <p class="page-subtitle">Manage and schedule your meetings</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Schedule Meeting
        </a>
    </div>
</div>

<div class="table-container">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Date & Time</th>
                    <th>Meeting Type</th>
                    <th>Venue</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th width="160">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meeting in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-sm">
                                <i class="bi bi-calendar3 text-primary"></i>
                                <div>
                                    <div class="fw-medium">@meeting.MeetingDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@meeting.MeetingDate.ToString("HH:mm")</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="fw-medium">@meeting.MeetingTypeName</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-sm">
                                <i class="bi bi-geo-alt text-muted"></i>
                                @meeting.MeetingVenueName
                            </div>
                        </td>
                        <td>@meeting.DepartmentName</td>
                        <td>
                            @if (meeting.IsCancelled)
                            {
                                <span class="badge badge-danger">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancelled
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-success">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Scheduled
                                </span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                @if (!meeting.IsCancelled)
                                {
                                    <form asp-action="Cancel" asp-route-id="@meeting.MeetingID" method="post" style="display:inline;" class="me-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-warning" title="Cancel Meeting" 
                                                style="background-color: #ffc107; border-color: #ffc107; color: #000;"
                                                onclick="return confirm('Are you sure you want to cancel this meeting?')">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </form>
                                }
                                <a asp-action="Edit" asp-route-id="@meeting.MeetingID" 
                                   class="btn btn-sm btn-secondary" title="Edit Meeting">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@meeting.MeetingID" method="post" style="display: inline;" onsubmit="console.log('Form submitting for meeting ID: @meeting.MeetingID');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete Meeting"
                                            onclick="console.log('Delete button clicked for meeting @meeting.MeetingID'); return confirm('Are you sure you want to delete this meeting?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-calendar-x"></i>
            <h3>No meetings scheduled</h3>
            <p class="text-muted">Get started by scheduling your first meeting</p>
            <a asp-action="Create" class="btn btn-primary mt-lg">
                <i class="bi bi-plus-circle"></i>
                Schedule Meeting
            </a>
        </div>
    }
</div>
