<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MOM</title>
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/assets/css/minimal-style.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <div class="logo">
                    <i class="bi bi-calendar-event-fill text-primary"></i>
                    <span>MOM</span>
                </div>
            </div>
            
            <div class="header-right">
                <div class="user-menu">
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <div class="user-info">
                        <span class="user-name">Admin User</span>
                        <small class="user-role">Administrator</small>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
            </ul>
            
            <div class="nav-group-header">Meeting Management</div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Meetings" asp-action="Index">
                        <i class="bi bi-calendar-event"></i>
                        <span>Meetings</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="MeetingType" asp-action="Index">
                        <i class="bi bi-tags"></i>
                        <span>Meeting Types</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="MeetingVenue" asp-action="Index">
                        <i class="bi bi-geo-alt"></i>
                        <span>Venues</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="MeetingMember" asp-action="Index">
                        <i class="bi bi-person-check"></i>
                        <span>Members</span>
                    </a>
                </li>
            </ul>
            
            <div class="nav-group-header">Organization</div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Staff" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Staff</span>
                    </a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Department" asp-action="Index">
                        <i class="bi bi-diagram-3"></i>
                        <span>Departments</span>
                    </a>
                </li>
            </ul>

            <div class="nav-group-header">Reports</div>
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Attendance" asp-action="Index">
                        <i class="bi bi-file-earmark-bar-graph"></i>
                        <span>Attendance Report</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/minimal-main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
