@model MOM.Models.StaffListVM

@{
    ViewData["Title"] = "Staff Members";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade-in" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade-in" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert">
            <i class="bi bi-x"></i>
        </button>
    </div>
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">Staff Members</h1>
            <p class="page-subtitle">Manage staff members and their meeting participation</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Add Staff Member
        </a>
    </div>
</div>

<!-- Filters (Kept simple to blend in) -->
<div class="card mb-4 border-0 shadow-sm">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <select name="departmentId" asp-items="Model.Departments" class="form-select">
                    <option value="">All Departments</option>
                </select>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search staff..." value="@Model.SearchTerm">
                </div>
            </div>
            <div class="col-md-5">
                <button type="submit" class="btn btn-primary">Search</button>
                @if (Model.DepartmentID.HasValue || !string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-light text-muted ms-2">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Staff Name</th>
                <th>Department</th>
                <th>Contact Info</th>
                <th>Stats</th>
                <th>Created</th>
                <th width="160">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.StaffList.Any())
            {
                foreach (var staff in Model.StaffList)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-sm">
                                <i class="bi bi-person-circle text-primary fs-5"></i>
                                <span class="fw-medium">@staff.StaffName</span>
                            </div>
                        </td>
                        <td>
                             <span class="fw-medium">@staff.DepartmentName</span>
                        </td>
                        <td>
                            <div class="d-flex flex-column small">
                                <div><i class="bi bi-telephone text-muted me-1"></i> @staff.MobileNo</div>
                                <div><i class="bi bi-envelope text-muted me-1"></i> <a href="mailto:@staff.EmailAddress" class="text-decoration-none">@staff.EmailAddress</a></div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge badge-primary" title="Total Meetings">
                                    <i class="bi bi-calendar-check me-1"></i> @staff.TotalMeetings
                                </span>
                                <span class="badge @(staff.AttendanceRate >= 75 ? "badge-success" : (staff.AttendanceRate >= 50 ? "badge-warning" : "badge-danger"))" title="Attendance Rate">
                                    <i class="bi bi-pie-chart me-1"></i> @staff.AttendanceRate%
                                </span>
                            </div>
                        </td>
                        <td>
                            <div class="text-muted">@staff.Created.ToString("MMM dd, yyyy")</div>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@staff.StaffID" class="btn btn-sm btn-secondary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@staff.StaffID" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this staff member?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">
                         <div class="empty-state">
                            <i class="bi bi-search"></i>
                            <h3>No staff found</h3>
                            <p class="text-muted">Try adjusting your filters</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
